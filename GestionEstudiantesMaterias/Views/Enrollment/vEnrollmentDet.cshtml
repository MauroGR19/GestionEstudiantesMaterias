@model EnrollmentDto
@{
    ViewData["Title"] = "vEnrollmentDet";
}

<link href=" ~/css/select2.min.css" rel="stylesheet" asp-append-version="true" />

<div class="row">
    <div class="col-1">
        <a asp-action="vEnrollmentDet" asp-controller="Enrollment" asp-route-_IdEnrollment="@Model.IdEnrollment" class="btn btn-warning btn-sm">Go back</a>
    </div>
</div>
<br />
<div class="row">

    <div class="col-5">
        <div class="card">
            <div class="card-header">
                @ViewBag.Accion
            </div>
            <div class="card-body">

                <form asp-action="SaveChanges" asp-controller="Enrollment" method="post">

                    <input type="hidden" asp-for="IdEnrollment" />

                    <div class="mb-2">
                        <label class="form-label">Subject</label>
                        @Html.DropDownListFor(m => m.Code, (IEnumerable<SelectListItem>)ViewData["Subjects"], "Seleccionar", new { @class = "form-control" })
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Credits</label>
                        <input type="number" class="form-control form-control-sm" id="Subject_Credits" />
                    </div>

                    <button type="submit" class="btn btn-success btn-sm">Save Changes </button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2();

            var subjects = @Html.Raw(Json.Serialize(ViewData["Subjects1"]));
            var $subjectDropdown = $('#Code');
            var $creditsInput = $('#Subject_Credits');

            $subjectDropdown.change(function () {
                var selectedId = $(this).val();

                if (selectedId && selectedId !== "Seleccionar") {
                    var selectedSubject = subjects.find(s => s.code.toString() === selectedId);

                    if (selectedSubject) {
                        $creditsInput.val(selectedSubject.credits);
                    }
                } else {
                    $creditsInput.val('');
            }
            });
        });
    </script>



}