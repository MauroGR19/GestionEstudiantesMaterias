@model List<StudentDto>
@{
    ViewData["Title"] = "vStudentIni";
}

<div class="text-center">
    <h1 class="display-4">Students</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="card">
    <div class="card-header">
        List of Students
    </div>
    <div class="card-body">

        <a asp-action="vStudentDet" asp-controller="Student" asp-route-Document="" class="btn btn-success btn-sm">New Student</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
                <tr>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Document</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-action="vStudentDet" asp-controller="Student" asp-route-Document="@item.Document" asp-route-insert="1" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Delete" asp-controller="Student" asp-route-Document="@item.Document" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>