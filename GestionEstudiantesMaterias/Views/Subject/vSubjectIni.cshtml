@model List<SubjectDto>
@{
    ViewData["Title"] = "vSubjectIni";
}

<div class="text-center">
    <h1 class="display-4">Subjects</h1>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<div class="card">
    <div class="card-header">
        List of Subjects 
    </div>
    <div class="card-body">

        <a asp-action="vSubjectDet" asp-controller="Subject" asp-route-Code="0" class="btn btn-success btn-sm">New Subject</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Credits</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.Credits</td>
                        <td>
                            <a asp-action="vSubjectDet" asp-controller="Subject" asp-route-Code="@item.Code" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Delete" asp-controller="Subject" asp-route-Code="@item.Code" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>